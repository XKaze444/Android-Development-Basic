<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="9dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rljuduldoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivgambardoa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doa_harian2"
                    />

                <TextView
                    android:id="@+id/tvjuduldoa"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/ivgambardoa"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="2"
                    android:text="DOA BANGUN TIDUR"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/ibcollapse"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginStart="260dp"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="14dp"
                    />
            </RelativeLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C1C0C0"
                />

            <RelativeLayout
                android:id="@+id/rlisidoa"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tvdoaarab"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doaarabُ"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tvdoalatin"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doalatinُ"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/tvdoaarab"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="10"
                    />



            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/cardz"
        android:layout_below="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="9dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rljuduldoa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivgambardoa2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doa_harian2"
                    />

                <TextView
                    android:id="@+id/tvjuduldoa2"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/ivgambardoa2"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="2"
                    android:text="DOA MAKAN"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/ibcollapse2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginStart="260dp"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="14dp"
                    />
            </RelativeLayout>


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C1C0C0"
                />

            <RelativeLayout
                android:id="@+id/rlisidoa2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tvdoaarab2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doaarabُ"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tvdoalatin2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doalatinُ"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/tvdoaarab2"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="10"
                    />



            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>