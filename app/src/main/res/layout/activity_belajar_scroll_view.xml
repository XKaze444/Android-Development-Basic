<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarScrollViewActivity">


    <ImageView
        android:id="@+id/ivimage"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ern"
        />



    <ImageView
        android:id="@+id/picture"
        android:layout_width="125dp"
        android:layout_height="200dp"
        android:src="@drawable/aot"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:id="@+id/tvjudul"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Shingeki No Kyojin Final Season"
        android:textSize="27dp"
        android:layout_toRightOf="@+id/picture"
        android:layout_marginStart="9dp"
        android:layout_marginTop="63dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="12"
        android:textColor="@color/white"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/bookmark"
        android:backgroundTint="@color/black"
        android:layout_toRightOf="@+id/tvjudul"
        android:layout_marginTop="30dp"
        android:layout_marginStart="1dp"
        />



    <TextView
        android:id="@+id/tvinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textSize="17dp"
        android:layout_toRightOf="@+id/picture"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/tvjudul"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="12"
        android:textColor="@color/white"
        />

    <ImageButton
        android:id="@+id/star9"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/star1"
        android:layout_toRightOf="@+id/tvinfo"
        android:layout_below="@+id/tvjudul"
        android:layout_marginTop="8dp"
        android:layout_marginStart="13dp"
        />

    <TextView
        android:id="@+id/tvinfow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6"
        android:textSize="17dp"
        android:layout_toRightOf="@+id/star9"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/tvjudul"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="12"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2M Reviews"
        android:textSize="17dp"
        android:layout_toRightOf="@+id/tvinfow"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/tvjudul"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="12"
        android:textColor="@color/white"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/box1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#B8B8B8"
        android:layout_below="@+id/picture"
        app:cardCornerRadius="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Fantasy"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/box2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#B8B8B8"
        android:layout_below="@+id/picture"
        app:cardCornerRadius="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Fictions"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/box3"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#B8B8B8"
        android:layout_below="@+id/picture"
        app:cardCornerRadius="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Action"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            />



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sipnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sypnosis"
        android:textSize="24dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@+id/box1"
        />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/sipnosis"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sipnotok"
                android:layout_width="wrap_content"
                android:layout_height="330dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:text="Eren begins to put his plan into action, turning against his former allies and enemies. Under the direction of Zeke, the wild animal kyojin, Eren takes extreme measures to end the long-standing conflict between Marley and Eldia. However, Eren's true intentions are still a mystery.Eren digs deep into his family's past, he struggles to control his own destiny. Meanwhile, the countries of Marley and Eldian, who have long been at war, still use soldiers and kyojin in an effort to avenge each other in the past.
In desperation, Reiner tries to restrain Eren from turning into the founding kyojin. Falco, Grice, and Gabi struggle to survive amidst the chaos that occurs. Elsewhere, Mikasa, Armin and several colleagues in the reconnaissance squad are still in prison without knowing the conditions outside."
                android:textSize="13dp" />
    </LinearLayout>
    </ScrollView>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_below="@+id/sipnosis"
        android:layout_height="300dp"
        android:layout_marginTop="190dp"
        >
    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Review"
        android:layout_marginTop="13dp"
        android:textSize="24dp"
        android:textStyle="bold"
        />

        <ScrollView
            android:id="@+id/scroll2"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_below="@id/review"
            android:layout_above="@+id/button"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/fsf2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/review"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="9dp"
            android:elevation="10dp"
            app:cardCornerRadius="60dp"

            >

            <ImageView
                android:id="@+id/profile2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/review"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:src="@drawable/eren" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/profilename2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review"
            android:layout_marginStart="100dp"
            android:layout_marginTop="-60dp"
            android:text="Eren!"
            android:textSize="24dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ulasan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilename"
            android:layout_marginStart="100dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:justificationMode="inter_word"
            android:text="I Like This Anime as well, I Love Mikasa! She's very attractive to me, Eren and his Friends..."
            android:textSize="13dp"
            />






            <androidx.cardview.widget.CardView
                android:id="@+id/fsf"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/review"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="14dp"
                android:elevation="10dp"
                app:cardCornerRadius="60dp"

                >

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/review"
                    android:background="@color/black"
                    android:scaleType="centerCrop"

                    android:src="@drawable/mass" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-55dp"
                android:text="Javier Stoyy"
                android:textSize="24dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/ulasan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilename"
                android:layout_marginStart="100dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:text="I Like This Anime as well, I Love Mikasa! She's very attractive to me, Eren and his Friends..."
                android:textSize="13dp"
                />






        </LinearLayout>
    </ScrollView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#C3C1C1"
            android:layout_above="@+id/button"
            android:layout_marginTop="6dp"
            />
        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Buy Here"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            app:icon="@drawable/cart"
            app:strokeColor="#000000"
            android:layout_marginBottom="10dp"
            app:strokeWidth="3sp"
            android:backgroundTint="#5C5C5C"
            />


    </RelativeLayout>
    </RelativeLayout>