<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TugasRecActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="DO'A DAN DZIKIR APP"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="28dp"
        />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="PILIHAN DOA DAN DZIKIR"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="27dp"
        />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="18dp"
        android:layout_marginTop="60dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/ocean"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/ivdoa"
                android:src="@drawable/golang"
                android:layout_toRightOf="@+id/tvdoa"
                android:layout_marginEnd="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvdoa"
                android:layout_centerInParent="true"
                android:text="DZIKIR DAN DOA SUNAH"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>