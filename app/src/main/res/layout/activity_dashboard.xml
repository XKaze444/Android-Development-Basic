<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageButton
        android:id="@+id/ibmenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_sort_24"
        android:backgroundTint="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/ivbackground"
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-81dp"
        android:background="@drawable/latihan_rectangle" />

    <ImageView
        android:id="@+id/saga"
        android:layout_width="wrap_content"
        android:layout_height="333dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/saga"

        />

    <TextView
        android:id="@+id/typeproduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIG SALE"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="324dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FF0000"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        />

    <TextView
        android:id="@+id/persen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeproduk"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-16dp"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="70%"
        android:textColor="#FF0000"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/persen"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="15"
        android:text="LIMITED TIME!!"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#C3C1C1"
        android:layout_below="@id/limit"
        android:layout_marginTop="-8dp"
/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvpopular"
        android:layout_marginStart="20dp"
        android:text="POPULAR"
        android:layout_below="@+id/view"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#FF5900"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvnewarrival"
        android:text="NEW ARRIVAL"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:layout_below="@+id/view"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvbrand"
        android:text="BRAND"
        android:layout_alignParentEnd="true"
        android:textSize="19sp"
        android:layout_below="@+id/view"
        android:textStyle="bold"
        android:layout_marginEnd="17dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/nasgoor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:elevation="10dp"
        android:layout_below="@+id/tvpopular"
        app:cardCornerRadius="20dp"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/nasgooy"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="9dp"
        android:elevation="10dp"
        android:layout_below="@+id/nasgoor"
        app:cardCornerRadius="20dp"
        >

        <ImageView
            android:id="@+id/naspad"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/naspaad"
            />

    </androidx.cardview.widget.CardView>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvnasgor"
        android:text="NASI GORENG DAFRI"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_below="@+id/tvnewarrival"
        android:layout_marginTop="13dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvnaspad"
        android:text="Cilebut"
        android:textSize="17sp"
        android:layout_below="@+id/tvnasgor"
        android:layout_marginTop="1dp"
        android:layout_marginStart="120dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvnaspade"
        android:text="$99.9"
        android:textSize="17sp"
        android:layout_below="@+id/tvnaspad"
        android:layout_marginTop="1dp"
        android:layout_marginStart="120dp"
        android:textColor="#FF0000"
        />






    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvnaspads"
        android:text="NASI PADANG DAFRI"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_below="@+id/tvnaspad"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvnaspadd"
        android:text="Rumah Rakarizi"
        android:textSize="17sp"
        android:layout_below="@+id/tvnaspads"
        android:layout_marginTop="1dp"
        android:layout_marginStart="120dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvnaspada"
        android:text="$99.9"
        android:textSize="17sp"
        android:layout_below="@+id/tvnaspadd"
        android:layout_marginTop="1dp"
        android:layout_marginStart="120dp"
        android:textColor="#FF0000"
        />

</RelativeLayout>