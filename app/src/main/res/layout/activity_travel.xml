<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TravelActivity"
    android:orientation="vertical"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="center"
        android:src="@drawable/fuji" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/poppins_medium"
                android:text="JAPAN"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:fontFamily="@font/poppins_medium"
                android:text="FUJI MOUNTAIN"
                android:textColor="#717171"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_star_24"
                android:layout_marginTop="21dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28sp"
                android:text="41"
                android:textSize="19sp"
                android:textStyle="bold"
                />

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >



        <ImageButton
            android:id="@+id/ibcall"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_call_24"

            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"


            />

        <ImageButton
            android:id="@+id/ibroute"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_navigation_24"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginHorizontal="70dp"

            />

        <ImageButton
            android:id="@+id/ibsharre"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_sharre_24"

            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="13dp"
        android:text="CALL"
        android:textSize="20sp"
        android:textColor="#0005FF"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:fontFamily="@font/poppins_medium"

            android:text="ROUTE"
            android:textColor="#0005FF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="SHARE"
            android:textSize="20sp"
            android:textColor="#0005FF"
            />

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="       Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.."
        android:fontFamily="@font/poppins_medium"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
</LinearLayout>